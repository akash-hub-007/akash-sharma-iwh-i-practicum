    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
  div.container
    h1 Add a More Records
    a(href="/") Return to the homepage
    <br>
    <br>
    form(action="/update-cobj", method="post").form-wrapper 
      label(for="name") Name:
      input(type="text" name="name" placeholder="Apple" required)
